<%- include ('./partials/header.ejs')  %>
<%- include ('./partials/nav.ejs')  %>

<div class="container">
  <h2 class="my-5">Posts</h2>
  <div class="row g-5">
    <% posts.forEach(post => { %>
      <div class="col-6">
        <div class="p-3 border bg-light">
          <h2><%= post.title %></h2>
          <p><%= post.body %></p>
          <a href="#"><%= post.tag %> </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

