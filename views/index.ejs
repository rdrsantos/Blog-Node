<%- include ('./partials/header.ejs')  %>
<%- include ('./partials/nav.ejs')  %>

<div class="container">
  <h2 class="my-5">Posts</h2>
  <div class="row g-5">
    <% posts.forEach(post => { %>
      <div class="col-6">
        <div class="p-3 border bg-light">
          <a href="/post/<%= post.slug %>"><h4><%= post.title %></h4></a>
          <hr>
          <a href="/posts/<%= post.category %>" class="btn btn-primary btn-sm"><%= post.category %></a>
        </div>
      </div>
    <% }) %>
  </div>
  <% if (posts.length >= 6) { %>
    <a class="btn btn-success mt-3" href="/page/2">Proximo</a>
  <% } %>
</div>

<%- include ('./partials/footer.ejs')  %>