<%- include ('../partials/header.ejs')  %>
<%- include ('../partials/nav.ejs')  %>

<div class="container">
  <div class="d-flex align-items-center justify-content-between">
    <h2>Posts</h2>
    <a href="/posts/new" class="btn btn-primary fw-bold">Adicionar post</a>
  </div>
  <hr>

  <% if (posts.length) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Slug</th>
          <th>Categoria</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% posts.forEach(({id, title, slug, tag}) => { %>
          <tr>
            <td><%= title %></td>
            <td><%= slug %></td>
            <td><%= tag %> </td>
            <td>
              <a href="/post/edit/<%= id %> " class="btn btn-warning">Editar</a>
              <form action="/post/delete" method="POST" class="d-inline" onsubmit="deleteConfirm(event, this)">
                <input type="hidden" value="<%= id %>" name="id">
                <button class="btn btn-danger">Excluir</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
  <% if (posts.length == 0) { %>
    <div class="card">
      <div class="card-body bg-warning">
        Nenhum post cadastrado.
      </div>
    </div>
  <% } %>
</div>

<script>
  function deleteConfirm(e, form){
    e.preventDefault();
    let decision = confirm('Deseja deletar este item?');
    if(decision){
      form.submit();
    }
  }
</script>

<%- include ('../partials/footer.ejs')  %>